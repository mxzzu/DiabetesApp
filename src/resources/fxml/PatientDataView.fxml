<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>
<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>

<AnchorPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.diabetesapp.controller.PatientDataController">

    <MFXScrollPane styleClass="root" fitToWidth="true" fitToHeight="true" pannable="true" AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <content>
            <HBox alignment="TOP_CENTER">
                <VBox spacing="20.0" maxWidth="800" styleClass="container" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Data Dashboard" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Welcome to the data dashboard. You can see your data below.">
                            <font>
                                <Font name="System Regular" size="16.0" />
                            </font>
                        </Label>

                        <VBox spacing="10.0" styleClass="card">
                            <children>
                                <Label fx:id="cardTitle" styleClass="card-header">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <VBox spacing="10.0">
                                    <MFXTableView fx:id="intakesTable" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0"
                                                  prefWidth="800.0" managed="false" visible="false" />
                                    <MFXTableView fx:id="detectionsTable" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0"
                                                  prefWidth="800.0" managed="false" visible="false" />
                                    <padding>
                                        <Insets top="5.0" bottom="5.0" />
                                    </padding>
                                </VBox>
                            </children>
                        </VBox>
                        <VBox fx:id="concTherapyBox" spacing="10.0" styleClass="card" visible="false" managed="false">
                            <children>
                                <Label text="Concomitant Therapies" styleClass="card-header">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <VBox spacing="10.0">
                                    <MFXTableView fx:id="concTherapyTable" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0"
                                                  prefWidth="800.0" />
                                    <padding>
                                        <Insets top="5.0" bottom="5.0" />
                                    </padding>
                                </VBox>
                                <HBox spacing="10.0">
                                    <MFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#handleDeleteConcTherapy" text="Delete Therapy"
                                               styleClass="button-danger" disable="true" fx:id="deleteButton" />
                                </HBox>
                            </children>
                        </VBox>

                        <MFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#handleBackToDashboard" text="Back to Dashboard" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </HBox>
        </content>
    </MFXScrollPane>
</AnchorPane>