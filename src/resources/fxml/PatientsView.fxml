<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" styleClass="container" xmlns="http://javafx.com/javafx/16" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.diabetesapp.controller.PatientsController">
   <children>
      <Label text="Patients Dashboard" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label text="Welcome to the patients dashboard. You can manage patients below." textAlignment="LEFT">
         <font>
            <Font name="System Regular" size="16.0" />
         </font>
      </Label>

      <VBox fx:id="patientManagementSection" spacing="10.0" styleClass="card">
         <children>
            <Label text="Patient Management" styleClass="card-header">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>

            <ScrollPane fitToWidth="true">
               <content>
                  <VBox fx:id="patientListContainer" spacing="10.0">
                     <padding>
                        <Insets top="5.0" bottom="5.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
      
      <Button mnemonicParsing="false" onAction="#handleBackToDashboard" text="Back to Dashboard" />
   </children>   
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>