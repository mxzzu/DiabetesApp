<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>

<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<AnchorPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.diabetesapp.controller.PatientManagementController">

    <MFXScrollPane styleClass="root" fitToWidth="true" fitToHeight="true" pannable="true" AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <content>
            <HBox alignment="TOP_CENTER">
                <VBox spacing="20.0" maxWidth="800" styleClass="container" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Patient Management" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <VBox fx:id="personalInfoContainer">
                        </VBox>
                        <VBox spacing="15.0" styleClass="card">
                            <children>
                                <Label styleClass="card-header" text="Therapy" />
                                <Label fx:id="therapyError" styleClass="alert-danger" text="No therapy found!"
                                       wrapText="true" visible="false" managed="false">
                                    <VBox.margin>
                                        <Insets bottom="10.0" top="10.0" />
                                    </VBox.margin>
                                </Label>
                                <MFXTableView fx:id="therapyTable" maxWidth="-Infinity" minHeight="-Infinity"
                                              minWidth="-Infinity" prefHeight="300.0"
                                              prefWidth="800.0"/>
                                <HBox spacing="10.0">
                                    <MFXButton fx:id="therapyButton" buttonType="RAISED" mnemonicParsing="false" onAction="#handleTherapyButton" styleClass="button-success" text="Modify Therapy" disable="true">
                                        <VBox.margin>
                                            <Insets top="20.0" />
                                        </VBox.margin>
                                    </MFXButton>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox styleClass="card">
                            <children>
                                <Label styleClass="card-header" text="Medical Information" />
                                <VBox fx:id="informationContainer" />
                                <HBox spacing="10.0">
                                    <MFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#updateMedicalInformations" styleClass="button-success"
                                               text="Update Medical Informations" />
                                    <MFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#seeChangesHistory" styleClass="button-secondary"
                                               text="See Changes History" />
                                    <VBox.margin>
                                        <Insets top="20.0" />
                                    </VBox.margin>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                        </VBox>
                        <HBox alignment="center" spacing="10.0">
                            <children>
                                <MFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#handleBackToPatients" text="Back to Patients" />
                                <MFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#handleBackToDashboard" text="Back to Dashboard" styleClass="button-secondary" />
                            </children>
                        </HBox>

                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </HBox>
        </content>
    </MFXScrollPane>
</AnchorPane>
